package retangle;

import java.util.Scanner;

public class hcn {
    private double cd;
    private double cr;
    private double s;
    private double c; 
    
      public hcn(double cd, double cr)
      {
    	   cd = this.cd;
    	   cr = this.cd;
      }
      public void getInfor() {
    	   Scanner inputScanner = new Scanner(System.in);
    	    System.out.println("Nhap chieu dai...");
    		cd = inputScanner.nextInt();
    		Scanner inputScanner1 = new Scanner(System.in);
    	    System.out.println("Nhap chieu rong...");
    		cr = inputScanner1.nextInt();
	}
      public void tinhCV() {
    	  c = +(cd + cr)*2;
    	 System.out.println("Chu vi:"+c);
	}
      public void tinhDientich() {
		System.out.println("Dien tich:"+(cr*cd));
	}
      public void display() {
    	  System.out.println("dien tich hcn: "+s);
		  System.out.println("chu vi hcn"+c);
	}
      
}
